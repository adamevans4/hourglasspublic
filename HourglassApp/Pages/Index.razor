@using ApplicationCore.Models
@using ApplicationCore.Interfaces
@using Microsoft.AspNetCore.Components
@*To load components of homepage into Index?*@
@page "/"
<PageTitle>Index</PageTitle>

<h1>Your Templates:</h1>
<div class="row text-center">
    <a class="hourglass-button btn btn-primary m-3" role="button" @onclick="() => OpenCreateTemplate()">Create New <i class=" bi bi-plus-circle"></i></a>
</div>

<div class="row">
    @foreach (var template in TemplateList)
    {
        <div class="hourglass-template-card col-md-4">
            <div class="card mb-3 position-relative">
                <div class="text-center card-body p-3 m-3" style="background-color: @template.TemplateColor" @onclick="() => OpenTemplateSession(template.Id)">
                    <h5 class="hourglass-template-card-title card-title">@template.Name</h5>
                    <i class="fas @template.TemplateImage"></i>
                </div>
                <div class="position-absolute top-0 end-0 mt-2 me-2">
                    <button class="btn btn-link btn-sm" @onclick="() => EditTemplate(template.Id)">
                        <i class="fas fa-cog"></i>
                    </button>
                </div>
            </div>
        </div>

    }
</div>
