@page "/TemplateSession/{templateID:int}"

<PageTitle>Start a Session!</PageTitle>

<link href="/css/Session.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Bangers&family=Bruno+Ace+SC&family=Rampart+One&display=swap" rel="stylesheet">





@if(SessionTemplate != null)
{
    <form @onsubmit="@(e => HandleSubmit())" class="container mt-5">
        <div class="card p-3" style="background-color: @SessionTemplate.TemplateColor; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);">
            <h1>Start a Session for: @SessionTemplate.Name</h1>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="startTime">Start Time</label>
                            <input required type="time" class="form-control" id="startTime" name="startTime" @bind="StartTime">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="endTime">End Time</label>
                            <input required type="time" class="form-control" id="endTime" name="endTime" @bind="EndTime">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="d-block mb-1" for="recurring">Recurring Session?</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="recurring" name="recurring" style="width: 4rem; height: 1.5rem;">
                                <label class="form-check-label" for="recurring"></label>
                            </div>
                        </div>
                    </div>
                </div>
     
                <div class="container py-3">
                    <div class="row">
                        <div class="col-md-12 d-flex justify-content-center">
                            <button class="hg-submit-button justify-content-center" type="submit">Start</button>
                        </div>
                    </div>
                </div>    
        </div>
    </form>


}
else
{
    <h1> Template not found</h1>
}
